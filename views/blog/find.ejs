

<div class="articles-container">
    <div class="searchContainer" style="padding-top: 3rem;">
        <form action="/blog/search" method="POST">
        <h1>Cauta tot ce ai nevoie in articolele noastre!</h1>
        <input type="text" id="search-bar" placeholder="Cauta un articol" name="searchinput" required style="margin: 1rem 0 1rem 0;">
        <button id="pink-button" type="submit" style="margin-bottom: 1rem;">Cauta!</button>
        </form>
    </div>
    <h1>Articole URZISOFT:</h1>
        <% for(var i=0; i < articles.length; i++) {%>
        <% if(articles[i].title.includes(search) || articles[i].content.includes(search)) { %>
        <div class="article">
            <div class="image-container">
                <img src="<%=images[i].link%>" alt="<%=i%>">
            </div>
            <div class="article-content">
                <h2><a href="/blog/post/<%=articles[i].id%>" style="font-size: 2.5rem; margin-left: 1.5rem;"><%= articles[i].title %></a></h2>
                <p style="margin-left: 1.5rem;"><%- articles[i].content.substring(0, 150) %>...</p>
            </div>
        </div>
                <%} }%>
</div>
